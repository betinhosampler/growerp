#Stage 1 - Install dependencies and build the app
FROM mobiledevops/flutter-sdk-image AS build-env

# get growerp repos
USER mobiledevops
WORKDIR /home/mobiledevops
RUN git clone --depth 1 https://github.com/growerp/growerp.git
WORKDIR /home/mobiledevops/growerp/packages/admin
RUN flutter build web --release

# Stage 2 - Create the run-time image
FROM nginx
COPY --from=build-env /home/mobiledevops/growerp/packages/admin/build/web /usr/share/nginx/html
EXPOSE 80
